{
    "version": 2,
    "builds": [
        {
            "src": "src/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/src/server.js"
        },
        {
            "source": "/review(.*)",
            "destination": "/src/server.js"
        },
        {
            "source": "/v1/(.*)",
            "destination": "/src/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}